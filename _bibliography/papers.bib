	keywords = {Algorithms, Cluster Analysis, Communicable Diseases, Computer Simulation, Epidemic, Epidemics, High-order structure, Humans, Mathematical Concepts, Models, Theoretical, Motif, Network, Neural Networks (Computer), Subgraph},
	pages = {255--281},
	code = {https://github.com/martinritchie/PGF-ODEs}
}

